<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8DAEF"
    android:backgroundTint="#E8DAEF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="544dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background Color"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="#E6D0F3">

            <View
                android:id="@+id/preview_selected_color"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="Click"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cell Color"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:background="#E6D0F3">

            <View
                android:id="@+id/preview_cell_selected_color"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="Click"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/cellSpeed"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Cell Speed"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="15dp"
            android:background="#000000"
            android:gravity="center" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center">

            <Button
                android:id="@+id/minusButton"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:backgroundTint="#7F5097"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="3"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:backgroundTint="#7F5097"
                android:text="+"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="233dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:backgroundTint="#7F5097"
            android:gravity="center"
            android:text="Activate Wallpaper"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>